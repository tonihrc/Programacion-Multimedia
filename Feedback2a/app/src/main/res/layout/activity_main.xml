        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064">

        <RadioButton
            android:id="@+id/espana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="image1"
            android:text="EspaÃ±a" />

        <RadioButton
            android:id="@+id/argentina"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:tag="image2"
            android:text="Argentina" />

        <RadioButton
            android:id="@+id/francia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="image3"
            android:text="Francia" />

        <RadioButton
            android:id="@+id/alemania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="image4"
            android:text="Alemania" />

        <RadioButton
            android:id="@+id/brasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
